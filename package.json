{
  "name": "ticket-connect",
  "displayName": "ticket-connect",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "media/linear.png",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ticket-explorer",
          "title": "Ticket Explorer",
          "icon": "media/linear1.png"
        }
      ]
    },
    "views": {
      "ticket-explorer": [
        {
          "id": "linearIssues",
          "name": "Linear Issues",
          "icon": "media/dep.svg",
          "contextualTitle": "Package Explorer"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "linearIssues",
        "contents": "No linear api key found; [find key](https://linear.app/dyte/settings/api).\n[Add Linear Key](command:ticket-connect.inputLinearApiKey)"
      }
    ],
    "commands": [
      {
        "command": "ticket-connect.inputLinearApiKey",
        "title": "Input Linear Key"
      },
      {
        "command": "ticket-connect.showTicket",
        "title": "Show Current Ticket"
      },
      {
        "command": "ticket-connect.openTicketInWebView",
        "title": "Open Current TIcket in Web View"
      },
      {
        "command": "ticket-connect.refreshTicket",
        "title": "Refresh"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ticket-connect.refreshTicket",
          "when": "view == linearIssues",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@hyperbeam/web": "^0.0.30",
    "@linear/sdk": "^7.0.1",
    "dotenv": "^16.3.1",
    "marked": "^7.0.3"
  }
}
